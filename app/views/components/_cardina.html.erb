 
 <div class="bg-[#415a77]">
  <div class="font-serif font-light text-center text-gray-300 text-xl p-16">
   Lavora con noi
  </div>

  <div class="flex flex-wrap justify-center">
    <% bottone.each_with_index do |item, index| %>
      <div class="flex flex-col items-center justify-center p-10 w-full sm:w-1/2 lg:w-1/3">
        
         <div class="relative w-40 h-40 sm:w-48 sm:h-48 mb-4">
          <!-- Cerchio verde -->
          <div class="absolute -top-3 -left-3 w-full h-full bg-[#0d1b2a] rounded-full  "></div>
          
          <!-- Immagine -->
          <img class="relative h-full w-full object-cover rounded-full  " src="<%= item[:fotoristo] %>" alt="Immagine">
        </div>

        <!-- Testo e bottone -->
        <p class="text-dark font-bold p-4 text-center  font-serif text-gray-300 text-lg"><%= item[:risto] %></p>
        <p class="text-dark px-4 pb-4 text-center  font-serif text-gray-300"><%= item[:testo] %></p>

        <button type="button" class="focus:outline-none text-white bg-[#0d1b2a] hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 mb-2  ">
          <%= item[:testogiallo] %>
        </button>
      </div>
    <% end %>
  </div>
</div>
<hr class="w-96 h-1 mx-auto my-4 bg-gray-100 border-0 rounded-sm md:my-10 dark:bg-gray-700">
