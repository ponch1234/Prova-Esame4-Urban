<!-- Inizio del contenuto -->
<hr class="w-3/4 sm:w-2/3 md:w-1/2 lg:w-1/3 h-1 mx-auto my-4 bg-gray-100 border-0 rounded-sm md:my-10 dark:bg-gray-700">

<div class="flex justify-center">
  <div class="w-full max-w-4xl flex flex-col px-4">

    <!-- Titolo principale -->
    <h1 class="text-xl text-gray-600 text-center mb-6 font-serif"><%= titolo %></h1>

    <!-- Iterazione sulle card -->
    <% cardona.each_with_index do |items, index| %>
      <div class="w-full h-auto border border-gray-200 p-4 mb-6 rounded-lg shadow-sm dark:border-gray-700">

        <div class="flex flex-col md:flex-row gap-4">
          <!-- Immagine -->
          <img 
            class="w-full md:w-72 h-60 object-cover border-2 border-gray-100 rounded-lg" 
            src="<%= items[:img] %>" 
            alt="Immagine <%= index + 1 %>"
          />

          <!-- Testo descrittivo -->
          <div class="flex flex-col justify-center p-2 md:p-4">
            <h2 class="text-sm font-light text-gray-500 font-serif text-start"><%= items[:testo] %></h2>
          </div>
        </div>

      </div>
    <% end %>

  </div>
</div>

<hr class="w-3/4 sm:w-2/3 md:w-1/2 lg:w-1/3 h-1 mx-auto my-4 bg-gray-100 border-0 rounded-sm md:my-10 dark:bg-gray-700">
<!-- Fine del contenuto -->
