<!-- Curva sopra il footer -->
<svg xmlns="http://www.w3.org/2000/svg" class="" viewBox="0 0 1440 180" preserveAspectRatio="none">
  <path fill="#0d1b2a" fill-opacity="1" d="M0,120 C360,60 1080,180 1440,120 L1440,200 L0,200 Z"></path>
</svg>

<footer class="flex flex-col bg-[#0d1b2a] w-full text-white p-10">

  <img class="h-20 w-30 mb-6 mx-auto sm:mx-0" src=" /img/nuovo.png " alt="logo footer">

  <div class="flex flex-wrap justify-center gap-20">
    <!--  elenco -->
    <ul class="flex flex-col items-center sm:items-start text-center sm:text-left">
      <li class="font-extrabold text-xl text-white mb-2">Uniamo le Forze</li>
      <% uniamo.each do |item| %>
        <li class="mb-6">
          <a class="text-white text-sm font-light" href="#"><%= item %></a>
        </li>
      <% end %>
    </ul>

    <!--2-->
    <ul class="flex flex-col items-center sm:items-start text-center sm:text-left">
      <li class="font-extrabold text-xl text-white mb-2">Uniamo le Forze</li>
      <% link.each do |item| %>
        <li class="mb-6">
          <a class="text-white text-sm font-light" href="#"><%= item %></a>
        </li>
      <% end %>
    </ul>

    <!--3-->
    <ul class="flex flex-col items-center sm:items-start text-center sm:text-left">
      <li class="font-extrabold text-xl text-white mb-2">Uniamo le Forze</li>
      <% seguici.each do |item| %>
        <li class="mb-6">
          <a class="text-white text-sm font-light" href="#"><%= item %></a>
        </li>
      <% end %>
    </ul>

    <!-- 4 -->
    <ul class="flex flex-col items-center sm:items-start text-center sm:text-left gap-4">
 
      <% altro.each do |item| %>
        <li class="mb-2">
          <a class="text-white text-sm font-light" href="#"><%= item %></a>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mt-10 flex justify-center sm:justify-start">
    <button id="dropdownButton" class="text-white border border-white hover:bg-blue-800 rounded-lg text-xs px-4 py-1 inline-flex items-center" type="button">
      <p class="text-base font-bold">italiano</p>
      <svg class="w-3 h-3 ml-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1l4 4 4-4"/>
      </svg>
    </button>

    <div id="dropdownMenu" class="hidden bg-white rounded-lg shadow w-44 mt-2">
      <ul class="py-2 text-sm text-gray-700">
        <li><a href="#" class="block px-4 py-2 hover:bg-gray-100">Italiano</a></li>
      </ul>
    </div>
  </div>
</footer>
